APP_NAME="E-Com"
APP_ENV=local
APP_KEY=base64:LYLmQ6VT0wDdB59CRANokBgQT2AfkE3VEucG5QNPhYA=  # Leave empty; will be generated by php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ecom_db
